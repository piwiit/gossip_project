<html>
  <body>
    <div class="container">
    <% if flash[:failure] %>
    <div class="alert alert-danger" role="alert">Echec lors de la création du gossip, veuillez réessayer</div>
  <% end %>
<h1>Form for creating gossips</h1>
    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @gossip.title %>
      <br /> <br />

      <%= label_tag 'Contenu' %>
      <%= text_area_tag 'content', @gossip.content %>
      <br /> <br />

      <%= label_tag 'user_id' %>
      <%= text_field_tag 'user_id', @gossip.user_id %>
      <br /> <br />

      
      <%= submit_tag "Créer" %>

    <% end %>

    </div>
  </body>
</html> 

