<div class = "container">
<h1 class = "text-center">Création d'un gossip</h1>
   
    <% if flash[:failure] %>
    <div class="alert alert-danger my-3" role="alert">Echec lors de la création du gossip, veuillez réessayer
    </div>    
    <% end %>

    <%= form_tag url_for(action: 'create'), method: "post" do %>
    
    <div class = "form-group">
      <%= label_tag 'Title' %><br>
    <div class = "form-control">
      <%= text_field_tag 'title', @gossip.title %>
    </div>
      <br /> <br />
    </div>

     <div class = "form-group mx-auto">
      <%= label_tag 'Contenu' %><br>
      <%= text_area_tag 'content', @gossip.content %>
    </div>
      
       <div class="form-group mx-auto">
    <%= submit_tag "Créer", class:"btn blue-gradient"%>  <a href="<%= gossip_index_path %>" class="btn peach-gradient">Annuler</a>
  
    </div>

    <% end %>

</div>
 

