

<%
=begin%>
 
  <div class="text-center nt-5">
 
  <h1>Identification</h1>
    <% if flash[:alert]%>
        <div class="alert alert-danger mx-5" role="alert">
          <strong>Echec !</strong> Une erreur s'est produite dans la création de ton user !
        </div>
      <% end %>
      <!-- Authenticity token sur une ligne -->
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <%= label_tag 'Email' %> <br/>
      <%= text_area_tag 'email' %>
      <br /> <br />

      <%= label_tag 'Mot de passe' %> <br/>
      <%= text_area_tag 'password' %>
      <br /> <br />

      <%= submit_tag "Login" %>
      <br/>
      <br/>
    <% end %>

  </div>
     
<%
=end%>

    <div class = "container">
<h1 class = "text-center">Connexion</h1>
   
    <% if flash[:danger] %>
    <div class="alert alert-danger my-3" role="alert">Echec lors de la Connexion, veuillez réessayer
    </div>    
    <% end %>

    <%= form_tag url_for(action: 'create'), method: "post" do %>
    
    <div class = "form-group">
      <%= label_tag 'email' %><br>
    <div class = "form-control">
        <%= text_area_tag 'email'%>
    </div>
      <br /> <br />
    </div>

     <div class = "form-group mx-auto">
      <%= label_tag 'Mot de passe' %><br>
      <%= text_area_tag 'password'%>
    </div>
      
       <div class="form-group mx-auto">
    <%= submit_tag "Ce connecter", class:"btn blue-gradient"%>  <a href="<%= gossip_index_path %>" class="btn peach-gradient">Annuler</a>
  
    </div>

    <% end %>

</div>
 